<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OtherMind" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/primary_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashTheme" parent="Theme.OtherMind">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="imageStroke">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>


    <style name="regularTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/app_regular</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="mediumTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/app_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="semiBoldTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="boldTextView" parent="regularTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/app_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>


    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/app_regular</item>
        <item name="hintTextColor">@color/dark_grey</item>
    </style>

    <style name="indicator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="background">@color/dark_grey</item>
    </style>

    <style name="guideLineStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.04</item>
    </style>

    <style name="guideLineEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.96</item>
    </style>

    <style name="guideLineTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">0.07</item>
    </style>

    <style name="guideLineBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:direction">bottom_to_top</item>
        <item name="layout_constraintGuide_percent">0.9</item>
    </style>

    <style name="button" parent="Theme.OtherMind">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/ic_login_button</item>
        <item name="backgroundTint">@null</item>
        <item name="fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>